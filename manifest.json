{
  "name": "Chrome Customiser",
  "description": "Design your own internet.",
  "version": "1.0",
  "manifest_version": 3,

  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "css": ["css/youtube.css"],
    "js": ["js/youtube.js"]
  },{
    "matches": ["*://*.channel4.com/*"],
    "css": ["css/channel4.css"]
  },{
    "matches": ["*://*.upwork.com/*"],
    "css": ["css/upwork.css"]
  },{
    "matches": ["*://*.netflix.com/*"],
    "css": ["css/netflix.css"]
  },{
    "matches": ["*://*.hellobonsai.com/*"],
    "css": ["css/bonsai.css"]
    }]
}
